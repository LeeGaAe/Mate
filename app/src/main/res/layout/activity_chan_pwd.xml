<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/UltraViolet"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 암호 입력"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반쪽 새로운 암호를 입력해주세요."
                android:textColor="@color/White"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/four"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/UltraViolet"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 암호 재 입력"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반쪽 새로운 암호를 다시 한번 입력해주세요."
                android:textColor="@color/White"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/re_one"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/re_two"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/re_three"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:id="@+id/re_four"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_circle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <GridView
                android:id="@+id/Gv_Pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@null"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

    </LinearLayout>
</LinearLayout>